{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "나의 첫 프로필 자소서",
  "description": "사용자의 프로필 자기소개서 정보를 담는 스키마",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "자기소개서의 제목입니다."
    },
    "type": {
        "type": "string",
        "description": "자기소개서 타입 (프로필 기반, 채용 공고 기반)"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "자기소개서가 마지막으로 수정된 날짜입니다."
    },
    "analysis": {
      "type": "object",
      "description": "사용자의 역량을 분석하는 섹션입니다.",
      "properties": {
        "strengths": {
          "type": "array",
          "description": "강점",
          "items": {
            "type": "string"
          }
        },
        "weaknesses": {
          "type": "array",
          "description": "약점",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "QnAs": {
      "type": "array",
      "title": "질문 및 답변 목록",
      "description": "성장 과정 등 자기소개서의 질문과 답변 항목들의 목록입니다.",
      "items": {
        "type": "object",
        "title": "질문/답변",
        "properties": {
          "question": {
            "type": "string",
            "title": "질문",
            "description": "자기소개서 질문 항목입니다."
          },
          "answer": {
            "type": "string",
            "title": "답변",
            "description": "질문에 대한 답변 내용입니다."
          }
        },
        "required": ["question", "answer"]
      }
    }
  },
  "required": [
    "title",
    "updatedAt",
    "analysis",
    "QnAs"
  ]
}